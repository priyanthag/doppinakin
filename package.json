{
  "name": "@priyanthag/doppinakin",
  "version": "1.0.0",
  "description": "DAM (Document Access Module) for node.js + Mongo",
  "main": "build/doppinakin.js",
  "scripts": {
    "build": "babel -d build/ src/",
    "dev": "NODE_ENV=development nodemon -w src --exec \"babel-node src\"",
    "lint": "eslint src",
    "test": "npm run lint && npm run test:unit",
    "test:runner": "NODE_ENV=test mocha --opts ./mocha.opts",
    "test:unit": "nyc npm run test:runner -- './src/**/test/*.spec.js' './example/**/test/*.spec.js' ",
    "test:unit:single": "nyc npm run test:runner -- -w",
    "test:coverage:html": "nyc report --reporter=html npm run test && && ./coverage/index.html",
    "test:coverage:codecov":  "nyc report --reporter=text-lcov npm run test && codecov --token=c921461d-1641-4377-9faa-48183dd785ff"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/priyanthag/doppinakin.git"
  },
  "author": "Priyantha Gunawardena <pgdesigning@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/priyanthag/doppinakin/issues"
  },
  "homepage": "https://github.com/priyanthag/doppinakin#readme",
  "dependencies": {
    "es6-promisify": "^5.0.0",
    "joi": "^10.2.2",
    "lodash": "^4.17.4",
    "mongodb": "^2.2.24",
    "timestamp": "0.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "eslint": "^3.1.1",
    "eslint-config-airbnb": "^14.1.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nodemon": "^1.9.2",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7"
  }
}
